<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/advanced">

        <ListPreference
            app:key="connection"
            app:title="@string/connection"
            app:defaultValue="any"
            app:entries="@array/connection_entries"
            app:entryValues="@array/connection_values"
            app:icon="@drawable/internet_icon"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="reset"
            app:title="@string/reset_app"
            app:icon="@drawable/fire_icon"
            app:summary="@string/reset_app_desc" />


    </PreferenceCategory>

</PreferenceScreen>
